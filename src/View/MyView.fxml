<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.2-internal" stylesheets="@/View/Covid19Style.css"  xmlns:fx="http://javafx.com/fxml/1" fx:controller="View.MainMenuController">
   <top>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <MenuBar fx:id="menuBar">
              <menus>
                <Menu mnemonicParsing="false" text="Options">
                  <items>
                    <MenuItem mnemonicParsing="false" onAction="#ViewConfigurations" text="Properties..." />
                  </items>
                </Menu>
                  <Menu mnemonicParsing="false" text="Help">
                     <items>
                        <MenuItem mnemonicParsing="false" onAction="#goToInstructions" text="Instructions" />
                     </items></Menu>
                  <Menu mnemonicParsing="false" text="About">
                     <items>
                        <MenuItem mnemonicParsing="false" onAction="#goToAbout" text="More about us" />
                     </items></Menu>
                  <Menu mnemonicParsing="false" text="Exit">
                     <items>
                        <MenuItem mnemonicParsing="false" onAction="#callUponExit" text="Exit Game" />
                     </items></Menu>
              </menus>
            </MenuBar>
         </children>
      </VBox>
   </top>
   <center>
      <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" prefWidth="83.0" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="playButton" minHeight="30.0" minWidth="100.0" mnemonicParsing="false" onAction="#goToPlayView" text="Play" />
            <Button fx:id="instructionsButton" minHeight="30.0" minWidth="100.0" mnemonicParsing="false" onAction="#goToInstructions" text="Instructions" />
         </children>
         <padding>
            <Insets left="5.0" />
         </padding>
      </VBox>
   </center>
   <bottom>
      <Button mnemonicParsing="false" text="Button" BorderPane.alignment="BOTTOM_RIGHT">
         <BorderPane.margin>
            <Insets bottom="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </padding>
      </Button>
   </bottom>
</BorderPane>
